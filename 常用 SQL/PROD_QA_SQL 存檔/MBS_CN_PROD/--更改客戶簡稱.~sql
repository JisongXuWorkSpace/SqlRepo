--更改客戶簡稱
--QA資訊
維修單號:MTMK906754
掛號單號:90045009
公司:SH

--先檢查時程
select MT.CUSTOMERABBNAME , MT.*  from DBS_MAJ.rpmmt MT where mtno IN('MTMK906754') and COMPANYCODE='SH';
--掛號單據
select CUSTOMERABBNAME,ENDUSER_NAME,charge_abb_name, ENDUSER_TYPE, show_customer from DBS_MAJ.rpmrg RG where registerno IN('90045009') and COMPANYCODE='SH';
--檢查是否產生帳務
select COMPANYCODE from DBS_MAJ.RPMPAYBACKDETAIL A where MTNO='MTMK906754' AND MTCOMPANYCODE='SH';

select rrr.customer_abb_name,RRR.ENDUSER_TYPE,rrr.* FROM DBS_MAJ.RPM_FACT_REPAIR rrr WHERE MT_NO='MTMK906754' AND COMPANY_CODE='SH';

select RNN.ENDUSER_TYPE,RNN.* FROM DBS_MAJ.RPM_FACT_REPAIR_NOW RNN WHERE MT_NO='MTMK906754' AND COMPANY_CODE='SH';

--r+ r- 單據
select * from eai_rpmzin_cust where SLIP_NO='R+3Q801022' and COMPANY_CODE='WU' and MT_NO='MT3Q810647';--R+
select * from eai_rpmzout_cust where SLIP_NO='R-3Q712656' and COMPANY_CODE='WU'; --R-

-- 查看客戶是否存在
SELECT * FROM som_customer_master WHERE CUSTOMERMABBNAME='ACERSERVICE';
SELECT * FROM somcustomer WHERE CUSTOMERABBNAME='ACERSERVICE';

-- UPDATE SQL
UPDATE DBS_MAJ.RPMRG SET CUSTOMERABBNAME='ACERSERVICE',charge_abb_name='ACERSERVICE', show_customer='ACERSERVICE',ENDUSER_NAME='ACERSERVICE' WHERE REGISTERNO='90045009' AND COMPANYCODE='SH';
UPDATE DBS_MAJ.RPMMT SET CUSTOMERABBNAME='ACERSERVICE' WHERE mtno='MTMK906754' AND COMPANYCODE='SH';
UPDATE DBS_MAJ.RPM_FACT_REPAIR SET CUSTOMER_ABB_NAME='ACERSERVICE' WHERE MT_NO='MTMK906754' AND COMPANY_CODE='SH';
UPDATE DBS_MAJ.RPM_FACT_REPAIR_NOW SET CUSTOMER_ABB_NAME='ACERSERVICE' WHERE MT_NO='MTMK906754' AND COMPANY_CODE='SH';
